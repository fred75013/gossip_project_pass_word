<div class="city_page">
    <div>
      <img src="https://picsum.photos/id/1011/550/500" alt="#">
    </div>

    <div>
    
        <div class="text-center mt-4 ">
          <p class="text-secondary mb-0 text-uppercase font-weight-bold" style="font-size: 2rem;"><%=@cities.name%></p> 
          <p class="text-secondary mb-1 ">"<%=@cities.zip_code%>"</p>
          
        </div>
      

      <div class ="gossip_ville ml-2 ">
        <div class="list-group ml-4" style="width:720px;">
          <button type="button" class="list-group-item list-group-item-action active">
            Liste des gossips de la Ville 
          </button>
          <%Gossip.all.each do |gossip|%>
            <%if gossip.user.city.name == @cities.name%>
              <button type="button" class="list-group-item list-group-item-action">
                <p class="text-capitalize">Titre : <%=gossip.title%></p>
                <p>Gossip : <%=gossip.content%><br></p>

                <% pre_like = gossip.likes.find { |like| like.user_id == current_user.id} %>
                <% if pre_like %>
                  <%= button_to 'Unlike', gossip_like_path(gossip, pre_like), method: :delete%>
                <% else %>
                  <%= button_to 'Like', gossip_likes_path(gossip), method: :post %>
                <% end %>
              <p><%= gossip.likes.count %> <%= (gossip.likes.count) == 1 ? 'Like' : 'Likes'%></p>

              </button>
            <%end%>
          <%end%>
        </div>
      </div>

      <div class="mt-2"> 
        <p class="text-center"><a href="/welcome" class="btn btn-secondary">Retour Ã  l'accueil</a></p>
      </div>

    </div>
</div>




